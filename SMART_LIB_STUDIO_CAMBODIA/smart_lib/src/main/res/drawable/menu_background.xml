<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding android:bottom="1dp" android:left="0dp" android:right="1dp"
                android:top="0dp"/>
            <solid android:color="#02000000"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="1dp" android:left="3dp" android:right="1dp"
                android:top="3dp"/>
            <solid android:color="#04000000"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="1dp" android:left="3dp" android:right="1dp"
                android:top="3dp"/>
            <solid android:color="#05000000"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="1dp" android:left="0dp" android:right="1dp"
                android:top="0dp"/>
            <solid android:color="#06000000"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="1dp" android:left="0dp" android:right="1dp"
                android:top="0dp"/>
            <solid android:color="#07000000"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="1dp"
                android:color="#09000000" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:bottom="1dp"
                android:left="-5dp"
                android:right="1dp"
                android:top="-5dp" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>